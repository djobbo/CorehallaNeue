{
  "extends": "@ch/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@ctx/*": [
        "providers/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@server/*": [
        "server/*"
      ],
    }
  }
}
